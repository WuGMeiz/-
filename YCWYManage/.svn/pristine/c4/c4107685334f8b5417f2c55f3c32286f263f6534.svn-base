*{
	margin: 0px;
	padding: 0px;
}
html{
	background-color:#f5f5f5;
}
body{
	background-color:#ffffff;
	font-family: "微软雅黑";
	font-size:16px;
}
a,a:link{ text-decoration: none;}
.clear{clear:both;}
.header{
	width: 100%;
	height: 130px;
	border-bottom:13px solid #265196;
}
.headerNav{
	width: 543px;
	height: 53px;
	margin: 0 auto;
}
.headerNav img{
	margin-top:30px;
}
.container{
	width:395px;
	margin: 0 auto;
	padding-bottom: 40px;
}
.title{
	height:39px;
	color:#ffffff;
	background:#4a87df;
	text-align:center;
	line-height:39px;
	margin-top:30px;
	margin-bottom:10px;
}
.title h2{
	font-size:21px;
	font-weight: normal;
}
.loginFrmP,.loginFrmP2,.loginFrmP3{
	width:395px;
	margin-top:20px;
}
.loginFrmP{
	background:url(../images/user109.png) no-repeat right center;
}
.loginFrmP3{
	background:url(../images/password4.png) no-repeat right center;
}
.loginFrmP input,.loginFrmP3 input{
	background-color: transparent;
	width:393px;
	height:32px;
	line-height:32px;
	border:1px solid #dddddd;
}
.loginFrmP2 input{
	width:196px;
	float: left;
	height:32px;
	line-height:32px;
	border:1px solid #dddddd;
}
.loginFrmyzm{
	width: 120px;
	display: inline-block;
	float: left;
	margin-left:5px;
}

.loginFrmyzm img{
	width: 120px;
	height:32px;
}
.loginFrmbtn{
	width:395px;
	height:39px;
	background-color:#498ffe;
	margin-top:20px;
	float: left;
}
.loginFrmbtn input{
	background-color: transparent;
	width:395px;
	height:39px;
	line-height:39px;
	border:none;
	cursor: pointer;
	color:#ffffff;
	font-size:16px;
	font-weight:bold;
}
.loginFrmbtn input:hover{background-color:#25b5ea;}
.footer{
	margin-top:80px;
	padding-top:40px;
	text-align: center;
	background-color:#f5f5f5;
}
@media screen and (max-width:800px) {
	.header{height: 80px;}
	.headerNav{width: 90%;margin: 0 auto;height:80px;}
	.headerNav img{width:90%;margin-top:12px;}
	.container{width:90%;margin: 0 auto;}
	.footer{margin-top:40px;padding-top:20px;text-align: center;}
	.loginFrmP,.loginFrmP2,.loginFrmP3,.loginFrmbtn{width:100%;}
	.loginFrmP input,.loginFrmP2 input,.loginFrmP3 input,.loginFrmbtn input{width:100%;}
}